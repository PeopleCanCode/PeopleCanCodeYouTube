<%= form_for @property do |f| %>
    <div>
      <%= f.label :name %><br />
      <%= f.text_field :name %>
    </div>

    <div>
      <%= f.label :description %><br />
      <%= f.text_area :description, rows: 6 %>
    </div>

    <div>
      <%= f.label :type %><br />
      <%= f.select :type, ['house', 'condo'], prompt: 'Select type' %>
    </div>

    <%= f.submit 'Save' %>
    <%= link_to 'back', properties_path %>
<% end %>