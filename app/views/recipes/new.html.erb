<%= form_for @recipe do |f| %>
    <div>
      <%= f.label :name %><br />
      <%= f.text_field :name %>
    </div>

    <div>
      <%= f.label :description %><br />
      <%= f.text_area :description, rows: 6 %>
    </div>

    <%= f.submit 'Save' %>
    <%= link_to 'back', recipes_path %>
<% end %>